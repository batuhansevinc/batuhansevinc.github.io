---
// Portfolio section with game showcase
interface Game {
  title: string;
  description: string;
  image: string;
  tags: string[];
  demoUrl?: string;
  githubUrl?: string;
  downloads?: string;
  featured?: boolean;
}

const games: Game[] = [
  {
    title: "Hyper Casual Runner",
    description: "Fast-paced endless runner game with procedural level generation. Featured smooth controls, power-ups system, and leaderboard integration.",
    image: "/images/game-placeholder-1.jpg",
    tags: ["Unity", "C#", "Mobile", "Hyper Casual"],
    featured: true,
    downloads: "500K+"
  },
  {
    title: "Idle Factory Tycoon",
    description: "Strategic idle game where players build and manage their factory empire. Includes automation systems, upgrades, and prestige mechanics.",
    image: "/images/game-placeholder-2.jpg",
    tags: ["Unity", "C#", "Idle", "Mobile"],
    featured: true,
    downloads: "1M+"
  },
  {
    title: "Puzzle Match 3D",
    description: "Innovative 3D matching puzzle game with physics-based mechanics. Implemented challenging levels and satisfying visual feedback.",
    image: "/images/game-placeholder-3.jpg",
    tags: ["Unity", "C#", "Puzzle", "Casual"],
    downloads: "250K+"
  },
  {
    title: "Arcade Shooter Pro",
    description: "Classic arcade-style space shooter with modern graphics. Features boss battles, weapon systems, and progressive difficulty.",
    image: "/images/game-placeholder-4.jpg",
    tags: ["Unity", "C#", "Arcade", "Action"],
    githubUrl: "https://github.com/batuhansevinc/arcade-shooter"
  },
  {
    title: "Merge Kingdom",
    description: "Merge mechanics combined with kingdom building. Players merge items to create powerful units and expand their empire.",
    image: "/images/game-placeholder-5.jpg",
    tags: ["Unity", "C#", "Merge", "Strategy"],
    downloads: "750K+"
  },
  {
    title: "Stack Jump Challenge",
    description: "Addictive stacking game with precision timing mechanics. Clean UI and progressive difficulty curve.",
    image: "/images/game-placeholder-6.jpg",
    tags: ["Unity", "C#", "Hyper Casual", "Arcade"]
  }
];
---

<section id="portfolio" class="py-24 px-6 bg-dark-900/50">
  <div class="container mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-display font-bold mb-4">
        Featured <span class="gradient-text">Games</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        A selection of games I've developed, showcasing various genres and mechanics
      </p>
    </div>

    <!-- Games Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {games.map((game) => (
        <div class="group game-card relative overflow-hidden rounded-2xl glass-effect border border-white/10 hover:border-primary-500/50 transition-all duration-500 hover:scale-105">
          <!-- Image -->
          <div class="relative h-64 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-dark-950 via-dark-950/50 to-transparent z-10"></div>
            <div class="w-full h-full bg-gradient-to-br from-primary-500/20 to-accent-500/20 flex items-center justify-center">
              <svg class="w-24 h-24 text-white/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            {game.featured && (
              <div class="absolute top-4 right-4 z-20 px-3 py-1 bg-gold-500 text-dark-950 text-xs font-bold rounded-full">
                FEATURED
              </div>
            )}
          </div>

          <!-- Content -->
          <div class="p-6 relative z-10">
            <h3 class="text-2xl font-display font-bold mb-2 text-white group-hover:text-primary-500 transition-colors">
              {game.title}
            </h3>
            <p class="text-gray-400 mb-4 line-clamp-3">
              {game.description}
            </p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {game.tags.map((tag) => (
                <span class="px-3 py-1 text-xs font-medium bg-primary-500/10 text-primary-400 rounded-full border border-primary-500/20">
                  {tag}
                </span>
              ))}
            </div>

            <!-- Stats & Links -->
            <div class="flex items-center justify-between pt-4 border-t border-white/10">
              {game.downloads && (
                <div class="flex items-center gap-2 text-sm text-gray-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                  </svg>
                  <span class="font-semibold text-primary-400">{game.downloads}</span>
                </div>
              )}
              <div class="flex items-center gap-2">
                {game.demoUrl && (
                  <a
                    href={game.demoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-2 rounded-lg bg-primary-500/10 hover:bg-primary-500 text-primary-400 hover:text-white transition-all"
                    aria-label="Play Demo"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </a>
                )}
                {game.githubUrl && (
                  <a
                    href={game.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-2 rounded-lg bg-white/5 hover:bg-white/10 text-white transition-all"
                    aria-label="View on GitHub"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>

          <!-- Hover Effect Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-primary-500/10 to-accent-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
        </div>
      ))}
    </div>

    <!-- View More Button -->
    <div class="text-center mt-12">
      <a
        href="https://github.com/batuhansevinc"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-8 py-4 glass-effect rounded-full font-semibold text-white border border-white/30 hover:border-primary-500 transition-all duration-300 hover:scale-105"
      >
        View More on GitHub
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .game-card {
    transform-style: preserve-3d;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
