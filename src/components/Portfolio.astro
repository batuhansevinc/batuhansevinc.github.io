---
// GitHub Pinned Repositories Style
interface Project {
  title: string;
  description: string;
  tech: string[];
  language: string;
  year: string;
  company?: string;
  github?: string;
  featured?: boolean;
  stats?: {
    metric?: string;
    value?: string;
  };
}

const projects: Project[] = [
  {
    title: "Match-3 LiveOps Platform",
    description: "Comprehensive ecosystem of tools including custom level editor, admin management suite, and LiveOps control panel. Built scalable backend with Firebase, battle pass config, daily rewards, and chat moderation systems.",
    tech: ["Unity Editor Extensions", "Firebase", "Admin Tools", "CI/CD"],
    language: "C#",
    year: "2025",
    company: "VELO Games",
    featured: true,
    stats: { metric: "Tools Built", value: "10+ Systems" }
  },
  {
    title: "Pizza Guys",
    description: "Co-created new mechanics and in-game content. Partnered with UA/Marketing on ad concepts achieving significant KPI improvements: CPI reduced $1.44→$0.97, D0 Playtime increased 737s→1895s, D7 Retention improved 4%→15%.",
    tech: ["Unity", "C#", "UA Optimization", "LiveOps"],
    language: "C#",
    year: "2024",
    company: "Rodd Games",
    featured: true,
    stats: { metric: "D7 Retention", value: "15%" }
  },
  {
    title: "Pixel Warriors - Save System",
    description: "Optimized save/load pipeline using Google Protobuf, cutting serialization times by ~50% and dramatically improving scene transition UX for better player experience.",
    tech: ["Unity", "Protobuf", "Performance", "Data Architecture"],
    language: "C#",
    year: "2024",
    company: "Rodd Games",
    stats: { metric: "Load Time", value: "-50%" }
  },
  {
    title: "Sort Away - Build Optimization",
    description: "Reduced build size from 120MB to 21MB via IL2CPP stripping, AssetBundles, and texture compression. This optimization drove significantly higher install rates in UA campaigns.",
    tech: ["Unity", "IL2CPP", "AssetBundles", "Optimization"],
    language: "C#",
    year: "2023",
    company: "Rodd Games",
    featured: true,
    stats: { metric: "Build Size", value: "21MB (-83%)" }
  },
  {
    title: "Chariot Race - Economy System",
    description: "Architected and tuned live-ops economy system leading to 4+ hours daily retention via event-based rewards and dynamic pacing. Created Firebase sync automation tools.",
    tech: ["Unity", "Firebase", "LiveOps", "Economy Design"],
    language: "C#",
    year: "2022",
    company: "Algebra Global",
    stats: { metric: "Daily Retention", value: "4+ hours" }
  },
  {
    title: "Yes or No",
    description: "Hyper-casual hit reaching 500K+ organic downloads with ~30% D1 retention. Built reusable mechanics templates reducing prototype build time by ~40%.",
    tech: ["Unity", "C#", "Hyper-Casual", "Remote Config"],
    language: "C#",
    year: "2021",
    company: "Unicode Games",
    stats: { metric: "Downloads", value: "500K+" }
  }
];
---

<section id="projects" class="section">
  <div class="max-w-6xl mx-auto">

    <!-- Section Header - GitHub Style -->
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-slate-text mb-2">
        Pinned Projects
      </h2>
      <p class="text-sm text-slate-muted">
        Notable mobile games and tools from 5+ years of game development
      </p>
    </div>

    <!-- Projects Grid - GitHub Pinned Repos Style -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
      {projects.map((project) => (
        <div class="card group relative">

          <!-- Pin Icon for Featured -->
          {project.featured && (
            <div class="absolute top-4 right-4">
              <svg class="w-4 h-4 text-slate-muted" fill="currentColor" viewBox="0 0 16 16">
                <path d="M4.456.734a1.75 1.75 0 0 1 2.826.504l.613 1.327a3.081 3.081 0 0 0 2.084 1.707l2.454.584c1.332.317 1.8 1.972.832 2.94L11.06 10l3.72 3.72a.75.75 0 1 1-1.061 1.06L10 11.06l-2.204 2.205c-.968.968-2.623.5-2.94-.832l-.584-2.454a3.081 3.081 0 0 0-1.707-2.084l-1.327-.613a1.75 1.75 0 0 1-.504-2.826L4.456.734ZM5.92 1.866a.25.25 0 0 0-.404-.072L1.794 5.516a.25.25 0 0 0 .072.404l1.328.613A4.582 4.582 0 0 1 5.73 9.63l.584 2.454a.25.25 0 0 0 .42.119l5.47-5.47a.25.25 0 0 0-.119-.42L9.63 5.73a4.581 4.581 0 0 1-3.098-2.537L5.92 1.866Z"></path>
              </svg>
            </div>
          )}

          <!-- Project Title -->
          <div class="flex items-start justify-between gap-2 mb-3">
            <div class="flex items-center gap-2 flex-1">
              <svg class="w-4 h-4 text-slate-muted shrink-0" fill="currentColor" viewBox="0 0 16 16">
                <path d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 1 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Zm10.5-1h-8a1 1 0 0 0-1 1v6.708A2.486 2.486 0 0 1 4.5 9h8ZM5 12.25a.25.25 0 0 1 .25-.25h3.5a.25.25 0 0 1 .25.25v3.25a.25.25 0 0 1-.4.2l-1.45-1.087a.249.249 0 0 0-.3 0L5.4 15.7a.25.25 0 0 1-.4-.2Z"></path>
              </svg>
              <h3 class="text-accent font-semibold group-hover:underline">
                {project.title}
              </h3>
            </div>
            {project.company && (
              <span class="text-xs text-slate-muted shrink-0">{project.company}</span>
            )}
          </div>

          <!-- Description -->
          <p class="text-sm text-slate-muted mb-4 line-clamp-3">
            {project.description}
          </p>

          <!-- Stats -->
          {project.stats && (
            <div class="mb-4">
              <div class="flex items-center gap-2 text-xs bg-slate-bg px-3 py-2 rounded border border-slate-border">
                <svg class="w-3 h-3 text-accent" fill="currentColor" viewBox="0 0 16 16">
                  <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z"></path>
                </svg>
                <span class="text-slate-muted">{project.stats.metric}:</span>
                <span class="text-accent font-semibold">{project.stats.value}</span>
              </div>
            </div>
          )}

          <!-- Footer -->
          <div class="flex items-center justify-between pt-3 border-t border-slate-border">
            <!-- Language Badge -->
            <div class="flex items-center gap-2 text-xs">
              <span class="w-3 h-3 rounded-full bg-accent"></span>
              <span class="text-slate-muted">{project.language}</span>
              <span class="text-slate-border">•</span>
              <span class="text-slate-muted">{project.year}</span>
            </div>

            <!-- GitHub Link -->
            {project.github && (
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-xs text-slate-muted hover:text-accent transition-colors"
              >
                View code →
              </a>
            )}
          </div>

        </div>
      ))}
    </div>

    <!-- Additional Projects Note -->
    <div class="card bg-slate-surface/50 text-center">
      <p class="text-sm text-slate-muted mb-3">
        <span class="text-slate-text font-semibold">20+ prototypes shipped</span> during hyper-casual development at Unicode Games
      </p>
      <p class="text-xs text-slate-muted">
        Includes rapid prototyping, market testing, and production titles across casual, hybrid-casual, arcade idle, and hyper-casual genres
      </p>
    </div>

    <!-- View More Link -->
    <div class="text-center mt-8">
      <a
        href="https://github.com/batuhansevinc?tab=repositories"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-sm text-slate-muted hover:text-accent transition-colors"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
        </svg>
        <span>View all repositories on GitHub</span>
      </a>
    </div>

  </div>
</section>
