---
// Minimalist Portfolio Section
interface Project {
  title: string;
  description: string;
  tech: string[];
  year: string;
  github?: string;
  featured?: boolean;
}

const projects: Project[] = [
  {
    title: "Hyper Casual Runner",
    description: "Fast-paced endless runner with procedural level generation and smooth controls",
    tech: ["Unity", "C#", "Mobile"],
    year: "2023",
    featured: true
  },
  {
    title: "Idle Factory Tycoon",
    description: "Strategic idle game with automation systems and prestige mechanics",
    tech: ["Unity", "C#", "Optimization"],
    year: "2023",
    featured: true
  },
  {
    title: "Puzzle Match 3D",
    description: "Innovative 3D matching puzzle with physics-based mechanics",
    tech: ["Unity", "C#", "3D Physics"],
    year: "2022"
  },
  {
    title: "Arcade Shooter",
    description: "Classic space shooter with boss battles and weapon systems",
    tech: ["Unity", "C#", "Gameplay"],
    year: "2022",
    github: "https://github.com/batuhansevinc/arcade-shooter"
  },
  {
    title: "Merge Kingdom",
    description: "Merge mechanics combined with kingdom building strategy",
    tech: ["Unity", "C#", "Systems"],
    year: "2021"
  },
  {
    title: "Stack Challenge",
    description: "Addictive stacking game with precision timing mechanics",
    tech: ["Unity", "C#", "Mobile"],
    year: "2021"
  }
];
---

<section id="projects" class="py-24 px-6 bg-gray-950">
  <div class="max-w-6xl mx-auto">
    
    <!-- Section Header -->
    <div class="mb-16 space-y-4">
      <div class="font-mono text-sm text-gray-600">// Projects</div>
      <h2 class="text-4xl md:text-5xl font-mono font-bold">
        Selected <span class="text-terminal">Work</span>
      </h2>
      <p class="text-gray-400 max-w-2xl">
        Game development projects showcasing technical expertise and problem-solving
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="space-y-4">
      {projects.map((project) => (
        <div class="group terminal-box hover:border-terminal transition-all duration-300">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            
            <!-- Project Info -->
            <div class="flex-1 space-y-3">
              <div class="flex items-center gap-3">
                <h3 class="font-mono text-xl font-semibold group-hover:text-terminal transition-colors">
                  {project.title}
                </h3>
                {project.featured && (
                  <span class="font-mono text-xs px-2 py-1 bg-terminal text-black">FEATURED</span>
                )}
              </div>

              <p class="text-gray-400 text-sm max-w-2xl">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-2">
                {project.tech.map((tech) => (
                  <span class="font-mono text-xs text-gray-500 border border-gray-800 px-2 py-1">
                    {tech}
                  </span>
                ))}
              </div>
            </div>

            <!-- Project Meta -->
            <div class="flex items-center gap-6 font-mono text-sm">
              <span class="text-gray-600">{project.year}</span>
              {project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover-terminal inline-flex items-center gap-1"
                >
                  <span class="text-gray-600">→</span>
                  <span>github</span>
                </a>
              )}
            </div>

          </div>
        </div>
      ))}
    </div>

    <!-- View More -->
    <div class="mt-12 text-center">
      <a
        href="https://github.com/batuhansevinc"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 font-mono text-sm hover-terminal"
      >
        <span>View all projects on GitHub</span>
        <span class="text-terminal">→</span>
      </a>
    </div>

  </div>
</section>
