---
// Minimalist Contact Section
---

<section id="contact" class="py-24 px-6">
  <div class="max-w-4xl mx-auto">
    
    <!-- Section Header -->
    <div class="mb-12 space-y-4">
      <div class="font-mono text-sm text-gray-600">// Contact</div>
      <h2 class="text-4xl md:text-5xl font-mono font-bold">
        Get In <span class="text-terminal">Touch</span>
      </h2>
      <p class="text-gray-400">
        Open to new opportunities and collaborations
      </p>
    </div>

    <!-- Contact Methods -->
    <div class="space-y-6">
      
      <!-- Email -->
      <div class="terminal-box">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div class="space-y-2">
            <div class="font-mono text-sm text-gray-600">// Email</div>
            <a href="mailto:eyupbatuhansevinc@gmail.com" class="font-mono text-lg hover-terminal">
              eyupbatuhansevinc@gmail.com
            </a>
          </div>
          <a
            href="mailto:eyupbatuhansevinc@gmail.com"
            class="font-mono text-sm px-6 py-3 border border-gray-700 hover:border-terminal hover:text-terminal transition-colors duration-200"
          >
            <span class="text-terminal">→</span> send_email()
          </a>
        </div>
      </div>

      <!-- Social Links Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        
        <div class="terminal-box">
          <div class="flex items-center justify-between">
            <div class="space-y-1">
              <div class="font-mono text-xs text-gray-600">// GitHub</div>
              <div class="font-mono text-sm">@batuhansevinc</div>
            </div>
            <a
              href="https://github.com/batuhansevinc"
              target="_blank"
              rel="noopener noreferrer"
              class="font-mono text-xs hover-terminal"
            >
              <span class="text-terminal">→</span> view
            </a>
          </div>
        </div>

        <div class="terminal-box">
          <div class="flex items-center justify-between">
            <div class="space-y-1">
              <div class="font-mono text-xs text-gray-600">// LinkedIn</div>
              <div class="font-mono text-sm">@eyupbatuhansevinc</div>
            </div>
            <a
              href="https://linkedin.com/in/eyupbatuhansevinc"
              target="_blank"
              rel="noopener noreferrer"
              class="font-mono text-xs hover-terminal"
            >
              <span class="text-terminal">→</span> connect
            </a>
          </div>
        </div>

        <div class="terminal-box">
          <div class="flex items-center justify-between">
            <div class="space-y-1">
              <div class="font-mono text-xs text-gray-600">// Twitter</div>
              <div class="font-mono text-sm">@bthnsvnc</div>
            </div>
            <a
              href="https://twitter.com/bthnsvnc"
              target="_blank"
              rel="noopener noreferrer"
              class="font-mono text-xs hover-terminal"
            >
              <span class="text-terminal">→</span> follow
            </a>
          </div>
        </div>

        <div class="terminal-box">
          <div class="flex items-center justify-between">
            <div class="space-y-1">
              <div class="font-mono text-xs text-gray-600">// Instagram</div>
              <div class="font-mono text-sm">@bthnsvnc</div>
            </div>
            <a
              href="https://instagram.com/bthnsvnc"
              target="_blank"
              rel="noopener noreferrer"
              class="font-mono text-xs hover-terminal"
            >
              <span class="text-terminal">→</span> follow
            </a>
          </div>
        </div>

      </div>

    </div>

  </div>
</section>

<!-- Footer -->
<footer class="py-8 px-6 border-t border-gray-900">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 font-mono text-sm text-gray-600">
      <div>© 2025 Batuhan Sevinc</div>
      <div class="flex items-center gap-2">
        <span>Built with</span>
        <span class="text-terminal">Astro</span>
        <span>+</span>
        <span class="text-terminal">TypeScript</span>
      </div>
    </div>
  </div>
</footer>
