---
// Contact section
---

<section id="contact" class="py-24 px-6 bg-dark-950 relative overflow-hidden">
  <!-- Background decorations -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>

  <div class="container mx-auto max-w-4xl relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-display font-bold mb-4">
        Get In <span class="gradient-text">Touch</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Let's work together on your next game project
      </p>
    </div>

    <!-- Contact Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      <!-- Email Card -->
      <a
        href="mailto:eyupbatuhansevinc@gmail.com"
        class="group p-8 rounded-2xl glass-effect border border-white/10 hover:border-primary-500/50 transition-all duration-300 hover:scale-105"
      >
        <div class="w-14 h-14 rounded-xl bg-primary-500/10 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-7 h-7 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-display font-semibold mb-2 text-white">Email</h3>
        <p class="text-gray-400 mb-2">Send me an email</p>
        <p class="text-primary-500 font-mono text-sm">eyupbatuhansevinc@gmail.com</p>
      </a>

      <!-- LinkedIn Card -->
      <a
        href="https://linkedin.com/in/eyupbatuhansevinc"
        target="_blank"
        rel="noopener noreferrer"
        class="group p-8 rounded-2xl glass-effect border border-white/10 hover:border-primary-500/50 transition-all duration-300 hover:scale-105"
      >
        <div class="w-14 h-14 rounded-xl bg-primary-500/10 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-7 h-7 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </div>
        <h3 class="text-xl font-display font-semibold mb-2 text-white">LinkedIn</h3>
        <p class="text-gray-400 mb-2">Connect with me</p>
        <p class="text-primary-500 font-mono text-sm">@eyupbatuhansevinc</p>
      </a>

      <!-- GitHub Card -->
      <a
        href="https://github.com/batuhansevinc"
        target="_blank"
        rel="noopener noreferrer"
        class="group p-8 rounded-2xl glass-effect border border-white/10 hover:border-primary-500/50 transition-all duration-300 hover:scale-105"
      >
        <div class="w-14 h-14 rounded-xl bg-primary-500/10 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-7 h-7 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </div>
        <h3 class="text-xl font-display font-semibold mb-2 text-white">GitHub</h3>
        <p class="text-gray-400 mb-2">View my code</p>
        <p class="text-primary-500 font-mono text-sm">@batuhansevinc</p>
      </a>

      <!-- Twitter Card -->
      <a
        href="https://twitter.com/bthnsvnc"
        target="_blank"
        rel="noopener noreferrer"
        class="group p-8 rounded-2xl glass-effect border border-white/10 hover:border-primary-500/50 transition-all duration-300 hover:scale-105"
      >
        <div class="w-14 h-14 rounded-xl bg-primary-500/10 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-7 h-7 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
          </svg>
        </div>
        <h3 class="text-xl font-display font-semibold mb-2 text-white">Twitter</h3>
        <p class="text-gray-400 mb-2">Follow me</p>
        <p class="text-primary-500 font-mono text-sm">@bthnsvnc</p>
      </a>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <div class="inline-block p-8 rounded-2xl glass-effect border border-white/10">
        <h3 class="text-2xl font-display font-bold mb-3 text-white">Ready to start a project?</h3>
        <p class="text-gray-400 mb-6">I'm always interested in hearing about new opportunities and collaborations.</p>
        <a
          href="mailto:eyupbatuhansevinc@gmail.com"
          class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full font-semibold text-white transition-all duration-300 hover:scale-105 hover:shadow-2xl"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Send Message
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="py-8 px-6 bg-dark-950 border-t border-white/10">
  <div class="container mx-auto max-w-7xl">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-gray-400 text-sm">
        © 2025 Batuhan Sevinc. All rights reserved.
      </p>
      <p class="text-gray-400 text-sm">
        Built with <span class="text-primary-500">♥</span> using Astro & Tailwind CSS
      </p>
    </div>
  </div>
</footer>
