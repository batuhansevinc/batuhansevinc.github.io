---
// Slate Minimalist Contact Section
---

<section id="contact" class="section bg-slate-surface/30">
  <div class="max-w-4xl mx-auto">

    <!-- Section Header -->
    <div class="mb-12 space-y-4 text-center">
      <p class="text-accent text-sm font-medium uppercase tracking-wider">Contact</p>
      <h2 class="heading-lg text-slate-text">
        Get In Touch
      </h2>
      <p class="text-slate-muted text-lg">
        Open to new opportunities and collaborations
      </p>
    </div>

    <!-- Main Contact Card -->
    <div class="card mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="space-y-2">
          <p class="text-sm text-slate-muted">Email</p>
          <a
            href="mailto:eyupbatuhansevinc@gmail.com"
            class="text-2xl font-bold text-slate-text hover:text-accent transition-colors"
          >
            eyupbatuhansevinc@gmail.com
          </a>
        </div>
        <a href="mailto:eyupbatuhansevinc@gmail.com" class="btn-primary">
          Send Message
        </a>
      </div>
    </div>

    <!-- Social Links Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

      <!-- GitHub -->
      <div class="card">
        <div class="flex items-center justify-between">
          <div class="space-y-1">
            <p class="text-sm text-slate-muted">GitHub</p>
            <p class="text-lg font-semibold text-slate-text">@batuhansevinc</p>
          </div>
          <a
            href="https://github.com/batuhansevinc"
            target="_blank"
            rel="noopener noreferrer"
            class="link"
          >
            View Profile →
          </a>
        </div>
      </div>

      <!-- LinkedIn -->
      <div class="card">
        <div class="flex items-center justify-between">
          <div class="space-y-1">
            <p class="text-sm text-slate-muted">LinkedIn</p>
            <p class="text-lg font-semibold text-slate-text">@eyupbatuhansevinc</p>
          </div>
          <a
            href="https://linkedin.com/in/eyupbatuhansevinc"
            target="_blank"
            rel="noopener noreferrer"
            class="link"
          >
            Connect →
          </a>
        </div>
      </div>

      <!-- Twitter -->
      <div class="card">
        <div class="flex items-center justify-between">
          <div class="space-y-1">
            <p class="text-sm text-slate-muted">Twitter</p>
            <p class="text-lg font-semibold text-slate-text">@bthnsvnc</p>
          </div>
          <a
            href="https://twitter.com/bthnsvnc"
            target="_blank"
            rel="noopener noreferrer"
            class="link"
          >
            Follow →
          </a>
        </div>
      </div>

      <!-- Instagram -->
      <div class="card">
        <div class="flex items-center justify-between">
          <div class="space-y-1">
            <p class="text-sm text-slate-muted">Instagram</p>
            <p class="text-lg font-semibold text-slate-text">@bthnsvnc</p>
          </div>
          <a
            href="https://instagram.com/bthnsvnc"
            target="_blank"
            rel="noopener noreferrer"
            class="link"
          >
            Follow →
          </a>
        </div>
      </div>

    </div>

  </div>
</section>

<!-- Footer -->
<footer class="py-12 px-6 border-t border-slate-border">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-slate-muted">
      <div>© 2025 Batuhan Sevinc. All rights reserved.</div>
      <div class="flex items-center gap-2">
        <span>Built with</span>
        <span class="text-accent font-medium">Astro</span>
        <span>+</span>
        <span class="text-accent font-medium">TypeScript</span>
        <span>+</span>
        <span class="text-accent font-medium">Tailwind CSS</span>
      </div>
    </div>
  </div>
</footer>
