        <!-- Bio -->
        <p class="text-slate-text">
          Unity Game Developer specializing in mobile games and performance optimization
        </p>

        <!-- CTA Button -->
        <a href="/EyupBatuhanSevinc_Portfolio.pdf" download class="btn-secondary w-full text-center block">
          Download CV
