---
// GitHub Topics/Tags Style Skills - Based on CV
const skillTags = [
  // Tools & Pipeline Development
  "Unity Editor Extensions", "Custom Tools", "Automation", "CI/CD", "Jenkins",
  "Unity Test Framework", "Addressables", "AssetBundles", "ScriptableObjects",

  // Languages & Core
  "C#", "Python", "Unity", "Shader Graph",

  // Game Engineering & Optimization
  "Mobile Performance", "IL2CPP", "Burst Compiler", "Jobs System",
  "DOTS/ECS", "Memory Optimization", "Profiling",

  // Architecture & Patterns
  "Zenject", "UniTask", "UniRx", "SOLID", "Event-Driven Architecture",
  "Dependency Injection", "Reactive Programming",

  // SDKs & Platforms
  "Firebase", "Applovin", "Facebook SDK", "Admob", "GameAnalytics", "Adjust",

  // Tools & Workflow
  "Git", "Jira", "Protobuf", "Remote Config",

  // Game Tech
  "DoTween", "A* Pathfinding", "Physics Simulation"
];

const topLanguages = [
  { name: "C#", percentage: 90, color: "bg-green-500" },
  { name: "Python", percentage: 7, color: "bg-yellow-500" },
  { name: "HLSL/Shaders", percentage: 2, color: "bg-purple-500" },
  { name: "Other", percentage: 1, color: "bg-slate-600" }
];

const coreCompetencies = [
  {
    title: "Tools & Pipeline Development",
    skills: ["Unity Editor Extensions", "Custom No-Code Tools", "Automation Scripts", "CI/CD (Jenkins)", "Addressables & AssetBundles"]
  },
  {
    title: "Game Engineering & Optimization",
    skills: ["Mobile Performance Tuning", "Burst & Jobs System", "DOTS/ECS", "Profiling & Bottleneck Analysis", "Memory & GC Optimization"]
  },
  {
    title: "Architecture & Patterns",
    skills: ["SOLID Principles", "Modular & Event-Driven Systems", "Dependency Injection (Zenject)", "Reactive Programming (UniRx, UniTask)"]
  }
];
---

<section id="skills" class="section">
  <div class="max-w-6xl mx-auto">

    <!-- Popular Topics - GitHub Style -->
    <div class="mb-12">
      <h2 class="text-xl font-semibold text-slate-text mb-6">
        Technologies & Skills
      </h2>

      <!-- Tags Grid -->
      <div class="flex flex-wrap gap-2">
        {skillTags.map((skill) => (
          <span class="px-3 py-1.5 text-xs font-medium bg-accent/10 text-accent border border-accent/20 rounded-full hover:bg-accent/20 transition-colors cursor-default">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <!-- Core Competencies -->
    <div class="mb-12 grid grid-cols-1 md:grid-cols-3 gap-6">
      {coreCompetencies.map((category) => (
        <div class="card">
          <h3 class="text-lg font-semibold text-slate-text mb-4 pb-3 border-b border-slate-border">
            {category.title}
          </h3>
          <ul class="space-y-2">
            {category.skills.map((skill) => (
              <li class="flex items-start gap-2 text-sm text-slate-muted">
                <span class="text-accent mt-0.5">â–¸</span>
                <span>{skill}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Languages Breakdown - GitHub Style -->
    <div class="card mb-12">
      <h3 class="text-lg font-semibold text-slate-text mb-4">
        Top Languages
      </h3>

      <!-- Progress Bar -->
      <div class="flex h-2 rounded-full overflow-hidden mb-4">
        {topLanguages.map((lang) => (
          <div
            class={lang.color}
            style={`width: ${lang.percentage}%`}
            title={`${lang.name} ${lang.percentage}%`}
          ></div>
        ))}
      </div>

      <!-- Language List -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {topLanguages.map((lang) => (
          <div class="flex items-center gap-2">
            <span class={`w-3 h-3 rounded-full ${lang.color}`}></span>
            <div class="text-sm">
              <span class="text-slate-text font-medium">{lang.name}</span>
              <span class="text-slate-muted ml-1">{lang.percentage}%</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Experience Highlights -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="card text-center">
        <div class="text-3xl font-bold text-accent mb-2">5+</div>
        <div class="text-sm text-slate-muted">Years Experience</div>
      </div>
      <div class="card text-center">
        <div class="text-3xl font-bold text-accent mb-2">35+</div>
        <div class="text-sm text-slate-muted">Projects Shipped</div>
      </div>
      <div class="card text-center">
        <div class="text-3xl font-bold text-accent mb-2">500K+</div>
        <div class="text-sm text-slate-muted">Total Downloads</div>
      </div>
      <div class="card text-center">
        <div class="text-3xl font-bold text-accent mb-2">-50%</div>
        <div class="text-sm text-slate-muted">Avg. Perf. Gain</div>
      </div>
    </div>

  </div>
</section>
