---
// Minimalist Skills Section
interface Skill {
  name: string;
  level: string; // Beginner, Intermediate, Advanced, Expert
}

const skills = {
  "Core Technologies": [
    { name: "Unity", level: "Expert" },
    { name: "C#", level: "Expert" },
    { name: "Game Architecture", level: "Advanced" },
    { name: "Mobile Optimization", level: "Advanced" }
  ],
  "Programming": [
    { name: "JavaScript/TypeScript", level: "Advanced" },
    { name: "Python", level: "Intermediate" },
    { name: "Java", level: "Intermediate" },
    { name: "System Design", level: "Advanced" }
  ],
  "Tools & Platforms": [
    { name: "Git/GitHub", level: "Expert" },
    { name: "Docker", level: "Intermediate" },
    { name: "Firebase", level: "Advanced" },
    { name: "CI/CD", level: "Advanced" }
  ]
};
---

<section id="skills" class="py-24 px-6">
  <div class="max-w-6xl mx-auto">
    
    <!-- Section Header -->
    <div class="mb-16 space-y-4">
      <div class="font-mono text-sm text-gray-600">// Skills</div>
      <h2 class="text-4xl md:text-5xl font-mono font-bold">
        Technical <span class="text-terminal">Stack</span>
      </h2>
    </div>

    <!-- Skills Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {Object.entries(skills).map(([category, items]) => (
        <div class="space-y-6">
          <h3 class="font-mono text-lg text-terminal border-b border-gray-900 pb-2">
            {category}
          </h3>
          <div class="space-y-3">
            {items.map((skill) => (
              <div class="flex items-center justify-between font-mono text-sm">
                <span class="text-gray-300">{skill.name}</span>
                <span class="text-gray-600 text-xs">{skill.level}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Terminal Command Visualization -->
    <div class="mt-16 terminal-box font-mono text-sm space-y-2">
      <div class="text-gray-600">$ skills --list --format=compact</div>
      <div class="text-gray-400 pl-4">
        <div>Unity [████████████████████] 95%</div>
        <div>C# [███████████████████░] 90%</div>
        <div>TypeScript [██████████████░░░░░] 80%</div>
        <div>System Design [████████████████░░] 85%</div>
      </div>
      <div class="text-terminal pt-2">✓ 4+ years of professional experience</div>
    </div>

  </div>
</section>
