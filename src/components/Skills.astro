---
// Slate Minimalist Skills Section
interface SkillItem {
  name: string;
  level: string;
}

const skills = {
  "Core Technologies": [
    { name: "Unity", level: "Expert" },
    { name: "C#", level: "Expert" },
    { name: "Game Architecture", level: "Advanced" },
    { name: "Mobile Optimization", level: "Advanced" }
  ],
  "Programming": [
    { name: "JavaScript/TypeScript", level: "Advanced" },
    { name: "Python", level: "Intermediate" },
    { name: "Java", level: "Intermediate" },
    { name: "System Design", level: "Advanced" }
  ],
  "Tools & Platforms": [
    { name: "Git/GitHub", level: "Expert" },
    { name: "Docker", level: "Intermediate" },
    { name: "Firebase", level: "Advanced" },
    { name: "CI/CD", level: "Advanced" }
  ]
};

const expertise = [
  "4+ years of professional game development",
  "Mobile game optimization for millions of users",
  "System architecture and scalable code design",
  "Performance profiling and memory optimization"
];
---

<section id="skills" class="section bg-slate-surface/30">
  <div class="max-w-6xl mx-auto">

    <!-- Section Header -->
    <div class="mb-16 space-y-4">
      <p class="text-accent text-sm font-medium uppercase tracking-wider">Skills</p>
      <h2 class="heading-lg text-slate-text">
        Technical Stack
      </h2>
    </div>

    <!-- Skills Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {Object.entries(skills).map(([category, items]) => (
        <div class="card">
          <h3 class="text-xl font-bold text-slate-text mb-6 pb-3 border-b border-slate-border">
            {category}
          </h3>
          <div class="space-y-4">
            {items.map((skill: SkillItem) => (
              <div class="flex items-center justify-between">
                <span class="text-slate-text font-medium">{skill.name}</span>
                <span class="text-xs text-slate-muted font-mono bg-slate-bg px-2 py-1 rounded border border-slate-border">
                  {skill.level}
                </span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Expertise Highlights -->
    <div class="card bg-slate-surface">
      <h3 class="text-xl font-bold text-slate-text mb-6">Expertise Highlights</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {expertise.map((item) => (
          <div class="flex items-start gap-3">
            <span class="text-accent text-lg shrink-0">â†’</span>
            <span class="text-slate-muted">{item}</span>
          </div>
        ))}
      </div>
    </div>

  </div>
</section>
