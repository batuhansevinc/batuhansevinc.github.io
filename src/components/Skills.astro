---
// Skills section with animated icons
interface Skill {
  name: string;
  icon: string;
  level: number; // 1-100
  category: string;
}

const skills: Skill[] = [
  // Game Development
  { name: "Unity", icon: "unity", level: 95, category: "Game Development" },
  { name: "C#", icon: "csharp", level: 90, category: "Game Development" },
  { name: "Game Design", icon: "gamepad", level: 85, category: "Game Development" },
  { name: "Mobile Development", icon: "mobile", level: 90, category: "Game Development" },

  // Programming
  { name: "JavaScript", icon: "javascript", level: 85, category: "Programming" },
  { name: "TypeScript", icon: "typescript", level: 80, category: "Programming" },
  { name: "Python", icon: "python", level: 75, category: "Programming" },
  { name: "Java", icon: "java", level: 70, category: "Programming" },

  // Tools & Technologies
  { name: "Git", icon: "git", level: 90, category: "Tools" },
  { name: "Docker", icon: "docker", level: 70, category: "Tools" },
  { name: "Firebase", icon: "firebase", level: 80, category: "Tools" },
  { name: "Visual Studio", icon: "vscode", level: 95, category: "Tools" },
];

const categories = [...new Set(skills.map(s => s.category))];
---

<section id="skills" class="py-24 px-6 bg-dark-950">
  <div class="container mx-auto max-w-7xl">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-display font-bold mb-4">
        Skills & <span class="gradient-text">Expertise</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Technologies and tools I use to bring games to life
      </p>
    </div>

    <!-- Skills by Category -->
    {categories.map((category) => (
      <div class="mb-16">
        <h3 class="text-2xl font-display font-bold mb-8 text-primary-400">
          {category}
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {skills
            .filter((skill) => skill.category === category)
            .map((skill) => (
              <div class="group skill-card p-6 rounded-xl glass-effect border border-white/10 hover:border-primary-500/50 transition-all duration-300 hover:scale-105">
                <!-- Icon -->
                <div class="flex items-center justify-between mb-4">
                  <div class="w-14 h-14 rounded-lg bg-gradient-to-br from-primary-500/20 to-accent-500/20 flex items-center justify-center group-hover:scale-110 transition-transform">
                    {skill.icon === "unity" && (
                      <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0L3 7v10l9 7 9-7V7l-9-7zm5.5 11.5L15 14l-3-1.5-3 1.5-2.5-2.5L9 9l3 1.5L15 9l2.5 2.5z"/>
                      </svg>
                    )}
                    {skill.icon === "csharp" && (
                      <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0A12 12 0 000 12a12 12 0 0012 12 12 12 0 0012-12A12 12 0 0012 0zM9.426 7.12c.974 0 1.753.79 1.753 1.764 0 .974-.779 1.763-1.753 1.763-.974 0-1.763-.789-1.763-1.763 0-.974.789-1.764 1.763-1.764zm5.148 0c.974 0 1.753.79 1.753 1.764 0 .974-.779 1.763-1.753 1.763-.974 0-1.753-.789-1.753-1.763 0-.974.779-1.764 1.753-1.764zM12 14c2.033 0 3.827.948 5.013 2.428l-1.589.875c-.797-1.005-2.011-1.65-3.424-1.65-1.413 0-2.627.645-3.424 1.65l-1.589-.875C8.173 14.948 9.967 14 12 14z"/>
                      </svg>
                    )}
                    {skill.icon === "gamepad" && (
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
                      </svg>
                    )}
                    {skill.icon === "mobile" && (
                      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                    )}
                    {skill.icon === "javascript" && (
