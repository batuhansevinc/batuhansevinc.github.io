---
// Floating Particles - GitHub Style Minimal Animation
---

<div class="particles-container">
  {Array.from({ length: 20 }).map((_, i) => (
    <div class="particle" data-particle={i}></div>
  ))}
</div>

<style>
  .particles-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(88, 166, 255, 0.15);
    border-radius: 50%;
    animation: float linear infinite;
  }

  /* Distribute particles randomly */
  .particle[data-particle="0"] { left: 10%; top: 20%; animation-duration: 25s; animation-delay: 0s; }
  .particle[data-particle="1"] { left: 20%; top: 80%; animation-duration: 30s; animation-delay: 2s; }
  .particle[data-particle="2"] { left: 30%; top: 40%; animation-duration: 28s; animation-delay: 4s; }
  .particle[data-particle="3"] { left: 40%; top: 10%; animation-duration: 32s; animation-delay: 1s; }
  .particle[data-particle="4"] { left: 50%; top: 70%; animation-duration: 27s; animation-delay: 3s; }
  .particle[data-particle="5"] { left: 60%; top: 30%; animation-duration: 29s; animation-delay: 5s; }
  .particle[data-particle="6"] { left: 70%; top: 90%; animation-duration: 26s; animation-delay: 2s; }
  .particle[data-particle="7"] { left: 80%; top: 50%; animation-duration: 31s; animation-delay: 0s; }
  .particle[data-particle="8"] { left: 90%; top: 15%; animation-duration: 33s; animation-delay: 4s; }
  .particle[data-particle="9"] { left: 15%; top: 60%; animation-duration: 28s; animation-delay: 1s; }
  .particle[data-particle="10"] { left: 25%; top: 25%; animation-duration: 30s; animation-delay: 3s; }
  .particle[data-particle="11"] { left: 35%; top: 75%; animation-duration: 27s; animation-delay: 2s; }
  .particle[data-particle="12"] { left: 45%; top: 45%; animation-duration: 29s; animation-delay: 5s; }
  .particle[data-particle="13"] { left: 55%; top: 85%; animation-duration: 26s; animation-delay: 0s; }
  .particle[data-particle="14"] { left: 65%; top: 35%; animation-duration: 31s; animation-delay: 4s; }
  .particle[data-particle="15"] { left: 75%; top: 65%; animation-duration: 28s; animation-delay: 1s; }
  .particle[data-particle="16"] { left: 85%; top: 20%; animation-duration: 32s; animation-delay: 3s; }
  .particle[data-particle="17"] { left: 12%; top: 50%; animation-duration: 27s; animation-delay: 2s; }
  .particle[data-particle="18"] { left: 48%; top: 95%; animation-duration: 30s; animation-delay: 5s; }
  .particle[data-particle="19"] { left: 92%; top: 42%; animation-duration: 29s; animation-delay: 1s; }

  /* Add some variation in size */
  .particle[data-particle="3"],
  .particle[data-particle="7"],
  .particle[data-particle="11"],
  .particle[data-particle="15"] {
    width: 3px;
    height: 3px;
    background: rgba(88, 166, 255, 0.1);
  }

  .particle[data-particle="5"],
  .particle[data-particle="10"],
  .particle[data-particle="16"] {
    width: 5px;
    height: 5px;
    background: rgba(88, 166, 255, 0.2);
  }

  @keyframes float {
    0% {
      transform: translate(0, 0) scale(1);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    50% {
      transform: translate(var(--float-x, 20px), var(--float-y, -30px)) scale(1.1);
      opacity: 0.8;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0;
    }
  }

  /* Different float directions for variety */
  .particle[data-particle="0"],
  .particle[data-particle="4"],
  .particle[data-particle="8"] {
    --float-x: 30px;
    --float-y: -40px;
  }

  .particle[data-particle="1"],
  .particle[data-particle="5"],
  .particle[data-particle="9"] {
    --float-x: -25px;
    --float-y: -35px;
  }

  .particle[data-particle="2"],
  .particle[data-particle="6"],
  .particle[data-particle="10"] {
    --float-x: 15px;
    --float-y: -50px;
  }

  .particle[data-particle="3"],
  .particle[data-particle="7"],
  .particle[data-particle="11"] {
    --float-x: -20px;
    --float-y: -25px;
  }

  /* Responsive: reduce particles on mobile */
  @media (max-width: 768px) {
    .particle[data-particle="10"],
    .particle[data-particle="11"],
    .particle[data-particle="12"],
    .particle[data-particle="13"],
    .particle[data-particle="14"],
    .particle[data-particle="15"],
    .particle[data-particle="16"],
    .particle[data-particle="17"],
    .particle[data-particle="18"],
    .particle[data-particle="19"] {
      display: none;
    }
  }
</style>
