---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Batuhan Sevinc - Software Engineer & Game Developer',
  description = 'Software Engineer specializing in Unity Game Development with 4+ years of experience in Casual, Hyper Casual, Hybrid Casual, Idle, and Arcade games.',
  image = '/og-image.jpg'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    <meta name="twitter:creator" content="@bthnsvnc" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Space+Grotesk:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Batuhan Sevinc",
        "jobTitle": "Software Engineer & Game Developer",
        "url": "https://batuhansevinc.me",
        "sameAs": [
          "https://linkedin.com/in/eyupbatuhansevinc",
          "https://github.com/batuhansevinc",
          "https://twitter.com/bthnsvnc",
          "https://instagram.com/bthnsvnc"
        ],
        "email": "eyupbatuhansevinc@gmail.com",
        "knowsAbout": [
          "Game Development",
          "Unity",
          "C#",
          "Software Engineering",
          "Mobile Game Development",
          "Casual Games",
          "Hyper Casual Games"
        ]
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
